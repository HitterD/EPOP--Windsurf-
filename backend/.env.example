# App
NODE_ENV=development
PORT=4000
CORS_ORIGIN=http://localhost:3000,http://localhost:4000

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=epop
DB_PASS=epop
DB_NAME=epop

# Redis
REDIS_URL=redis://localhost:6379

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=epop
MINIO_USE_SSL=false

# Optional Secondary S3 (Synology or other)
S3_SECONDARY_ENABLED=false
S3_SECONDARY_ENDPOINT=
S3_SECONDARY_PORT=9000
S3_SECONDARY_ACCESS_KEY=
S3_SECONDARY_SECRET_KEY=
S3_SECONDARY_BUCKET=epop
S3_SECONDARY_USE_SSL=false

# ZincSearch
ZINC_URL=http://localhost:4080
ZINC_USER=admin
ZINC_PASS=admin
ZINC_INDEX_PREFIX=epop

# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
MAIL_FROM=noreply@epop.local

# Web Push (VAPID)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@epop.local

# Rate Limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# JWT/Auth
JWT_ACCESS_SECRET=dev_access_secret_change
JWT_REFRESH_SECRET=dev_refresh_secret_change
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=2592000
COOKIE_DOMAIN=localhost

# Calendar ICS
ICS_FEED_SECRET=dev_ics_secret

# Workers
EMAIL_WORKER_CONCURRENCY=5
SEARCH_WORKER_CONCURRENCY=5

# DB Performance (dev only)
TYPEORM_LOGGING=true
TYPEORM_SLOW_QUERY_THRESHOLD_MS=200
TYPEORM_SLOW_QUERY_LOG_FILE=logs/slow-queries.log

# Antivirus (ClamAV)
CLAMAV_ENABLED=false
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# OpenTelemetry (optional)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_SERVICE_NAME=epop-backend
